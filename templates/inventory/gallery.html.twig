{% extends "base.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/gallery.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/page/gallery.js') }}"></script>
{% endblock %}

{% block body %}

<div class="container" style="margin-bottom:60px;">
    <div class="gallery">
        <div class="card">
            <div class="card-body">
                <h3 class="card-text"><span class="align-middle">{{ title }}</h3>
            </div>
            <div class="card-footer">
                <a class="card-text btn btn-warning rounded-pill" href="{{ path("_blogs") }}">Home</a>
            </div>
        </div>
        {% for image in images %}
            <div class="img-container">
                <img src="{{ asset(image) }}" alt="{{ image }}" data-original="{{ asset(image) }}"/>
            </div>
        {% endfor %}
    </div>
</div>

<div class="modal-gallery">
<img src="" alt="" class="full-img" />
</div>

{% endblock %}