{% extends "base.html.twig" %}

{% block body %}
    
    <h1>{{ blog.title }}</h1>
    <h5><span>#{{ blog.id }}</span> - <small>{{ blog.created|date("d/M/Y") }}</small></h5>
    <br/>
    <h3>{{ blog.body }}</h3>
    <br/>
    <p>Last update <small>{{blog.updated|date("d/M/Y") }}</small></p>

    <a href="{{ path('_blogs') }}">Back</a>
    {% if app.user %}
    <a href="{{ path('_blog_update', {'id': blog.id }) }}">Edit</a>
    {% endif %}


{% endblock %}